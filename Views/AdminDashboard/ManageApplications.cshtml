@model List<AdoptionHub.Models.Adoptionapplication>

<div class="container-fluid p-5">
    <a href="@Url.Action("Index", "AdminDashboard")" class="btn btn-outline-dark btn-sm mb-3">
        <i class="bi-arrow-left"></i> Back
    </a>

    <div class="row mb-4">
        <div class="col">
            <h1 class="display-4">Adoption Application Management</h1>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="table-responsive">
            <table class="table table-striped table-hover align-middle text-center mb-0">
                <thead class="align-middle bg-light">
                    <tr>
                        <th>Application ID</th>
                        <th>Pet Name</th>
                        <th>Foster Parent</th>
                        <th>Species</th>
                       
                        <th>Status</th>
                        <th>Adoption Fee</th>
                        <th>Application Status</th>
                        <th>Application Date</th>
                        <th>Applicant Full Name</th>
                      
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody class="table-group-divider">
                    @foreach (var application in Model)
                    {
                        <tr>
                            <td>@application.Id</td>
                            <td class="fw-semibold">@application.Pet?.Details.Name</td>
                            <td>
                                @(application.Pet?.CurrentFosterAssignment?.Foster != null
                                    ? application.Pet.CurrentFosterAssignment.Foster.FullName
                                    : "Not fostered")
                            </td>
                            <td>@application.Pet?.Details.Species</td>
                            <td>@application.Pet?.Status</td>
                            <td>@application.Pet?.Details.AdoptionFee?.ToString("C")</td>
                            <td>@application.ApplicationStatus</td>
                            <td>@application.ApplicationDateTime?.ToString("yyyy-MM-dd HH:mm")</td>
                            <td>@application.FullName</td>
                            <td>
                                <a href="@Url.Action("ManageApplication", "AdminDashboard", new { id = application.Id })"
                                   class="btn btn-outline-primary">
                                    <i class="bi-pencil me-1"></i>Edit
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>