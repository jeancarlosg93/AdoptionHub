@model PetEditViewModel

@{
    ViewData["Title"] = "Edit Pet";
}

<h2>Edit Pet Information</h2>

<form asp-action="EditPet" method="post">
    <input type="hidden" asp-for="Pet.Id" />
    <div class="form-group">
        <label asp-for="Pet.Name" class="control-label"></label>
        <input asp-for="Pet.Name" class="form-control" />
        <span asp-validation-for="Pet.Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Pet.FosterParent.Id" class="control-label">Foster Parent</label>
        <select asp-for="Pet.FosterParent.Id" class="form-control" asp-items="@(new SelectList(Model.Users, "Id", "FullName", Model.Pet.FosterParent?.Id))">
            <option value="">Select a foster parent</option>
        
        </select>
    </div>
    <div class="form-group">
        <label asp-for="Pet.Species" class="control-label"></label>
        <input asp-for="Pet.Species" class="form-control" />
        <span asp-validation-for="Pet.Species" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Pet.Breed" class="control-label"></label>
        <input asp-for="Pet.Breed" class="form-control" />
        <span asp-validation-for="Pet.Breed" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Pet.DateOfBirth" class="control-label"></label>
        <input asp-for="Pet.DateOfBirth" class="form-control" type="date" />
        <span asp-validation-for="Pet.DateOfBirth" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Pet.Gender" class="control-label"></label>
        <input asp-for="Pet.Gender" class="form-control" />
        <span asp-validation-for="Pet.Gender" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Pet.Weight" class="control-label"></label>
        <input asp-for="Pet.Weight" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="Pet.Weight" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Pet.Color" class="control-label"></label>
        <input asp-for="Pet.Color" class="form-control" />
        <span asp-validation-for="Pet.Color" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Pet.Temperament" class="control-label"></label>
        <input asp-for="Pet.Temperament" class="form-control" />
        <span asp-validation-for="Pet.Temperament" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Pet.DateArrived" class="control-label"></label>
        <input asp-for="Pet.DateArrived" class="form-control" type="date" />
        <span asp-validation-for="Pet.DateArrived" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Pet.Bio" class="control-label"></label>
        <textarea asp-for="Pet.Bio" class="form-control"></textarea>
        <span asp-validation-for="Pet.Bio" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Pet.Status" class="control-label"></label>
        <input asp-for="Pet.Status" class="form-control" />
        <span asp-validation-for="Pet.Status" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Pet.AdoptionFee" class="control-label"></label>
        <input asp-for="Pet.AdoptionFee" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="Pet.AdoptionFee" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
