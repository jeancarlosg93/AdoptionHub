@{
    ViewData["Title"] = "Login Page";
}

<div id="map" class="heroBackground">
    <div class="container-lg col-xl-10 col-xxl-8 px-4 py-5 ">
        <div class="row align-items-center g-lg-5">
            <div class="col-lg-7 text-center text-lg-start ">
                <h1 class="display-4 fw-bold lh-1 mb-3 text-white">Lorem ipsum dolor sit amet</h1>
                <p class="col-lg-10 fs-4 text-white">Lorem ipsum dolor sit amet, consectetur adipisicing elit. Ad at atque cum ducimus eaque earum enim, error explicabo facere fuga id molestias nihil quibusdam unde voluptas. Laboriosam nobis quas qui!</p>
            </div>
            <div class="col-md-10 mx-auto col-lg-5">
                <form class="p-4 p-md-5 border rounded-3 bg-light" asp-action="LoginMethod" method="post">
                    <div class="form-floating mb-3">
                        <input type="text" name="Username" class="form-control" id="Username" placeholder="User Name">
                        <label for="Username">User Name</label>
                    </div>
                    <div class="form-floating mb-3">
                        <input type="password" name="Password" class="form-control" id="Password" placeholder="Password">
                        <label for="Password">Password</label>
                    </div>

                    @if (Model != null && !string.IsNullOrEmpty(Model.ErrorMessage))
                    {
                        <div class="rounded my-2 p-2 bg-danger bg-opacity-10 text-center">
                            <p class=" text-danger">
                                @Model.ErrorMessage
                            </p>
                            <a class="text-decoration-underline"
                               href="@Url.Action()">
                                Forgot
                                password?
                            </a>

                        </div>
                    }

                    <button class="btn btn-lg btn-primary" type="submit">Log in</button>
                    <button class="btn btn-lg btn-outline-primary" asp-controller="Login" asp-page="Register">Register</button>
                </form>
            </div>
        </div>
    </div>
</div>