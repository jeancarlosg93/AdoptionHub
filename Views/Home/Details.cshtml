@model AdoptionHub.Models.Pet

<div class="container mt-4">
    <div class="row">
        <a class="btn btn-outline-danger" href='@Url.Action("Dashboard", "Home")'>Go Back</a>
    </div>
    <div class="row">
        <div class="col-auto m-2">
            <div class="card pet-card shadow-sm" style="width: 42rem;">
               
                @functions {
                    private static readonly Random Random = new Random();
                }
                <img src="/images/exampleImg/dog@(Random.Next(1, 8)).jpg" class="card-img-top" alt="...">                <div class="card-body">
                    <h4 class="card-title">@Model.Name </h4>
                    <div class="card-body">
                        
                    <p class="card-text">Id = @Model.Id </p>
                    <p class="card-text">Species = @Model.Species</p>
                    <p class="card-text">Breed = @Model.Breed</p>
                    <p class="card-text">DateOfBirth = @Model.DateOfBirth</p>
                    <p class="card-text">Gender = @Model.Gender</p>
                    <p class="card-text">Weight = @Model.Weight</p>
                    <p class="card-text">Color = @Model.Color</p>
                    <p class="card-text">Temperament = @Model.Temperament</p>
                    <p class="card-text">Bio = @Model.Bio</p>
                    <p class="card-text">AdoptionFee = @Model.AdoptionFee</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>