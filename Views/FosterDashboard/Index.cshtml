@{
    ViewData["Title"] = "Foster Dashboard";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Foster Dashboard</title>
    <style>
        /* Dashboard container to hold the content */
        .dashboard-container {
            padding: 20px;
            max-width: 1200px;
            margin: 0 auto;
        }

            .dashboard-container h1 {
                font-size: 36px;
                color: #333;
                margin-bottom: 10px;
            }

            .dashboard-container h2 {
                font-size: 28px;
                color: #555;
                margin-bottom: 30px;
            }

        .fostered-pets {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            gap: 20px;
        }

        .pet-card {
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            padding: 20px;
            width: 250px;
            text-align: center;
            transition: transform 0.3s;
        }

            .pet-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 6px 12px rgba(0, 0, 0, 0.2);
            }

        .pet-btn {
            display: inline-block;
            margin-top: 15px;
            padding: 10px 20px;
            background-color: #007bff;
            color: white;
            text-decoration: none;
            border-radius: 4px;
            transition: background-color 0.3s;
        }

            .pet-btn:hover {
                background-color: #0056b3;
            }
    </style>
</head>
<body>

    <div class="dashboard-container">
        <h1 class="text-center">Welcome to Foster Dashboard, @Context.Session.GetString("Username")</h1>

        <div class="fostered-pets">
            @foreach (var pet in Model)
            {
                <div class="pet-card">
                    @* <div>
                        @if (pet.Images != null && pet.Images.Any())
                        {
                            @foreach (var imageUrl in pet.Images) {
                                <img src="@imageUrl" alt="Pet Image" style="width: 200px; height: auto; margin: 10px;" />
                            }
                        }
                        else {
                            <p>No images available for this pet.</p>
                        }
                    </div> *@
                    <div class="pet-id">Pet ID: @pet.Id</div>
                    <div class="pet-name">Pet Name: @pet.Name</div>
                    <div class="pet-species">Description: @pet.Species</div>
                    <a class="pet-btn" href="@Url.Action("Index", "FosterUpdateInfo", new { petId = pet.Id })">Update Info</a>
                </div>
            }
        </div>

    </div>

</body>
</html>
